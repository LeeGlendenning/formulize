/**
 * Formulize Integration API inclusion
 */
function include_formulize()
{
	// Get path of Formulize
	$formulize_path = variable_get('formulize_full_path', NULL);
	$formulize_path = is_dir($formulize_path) ? rtrim($formulize_path, '/\\') : dirname($formulize_path);
	$integration_api_path = $formulize_path . DIRECTORY_SEPARATOR . 'integration_api.php';

	global $user;

	// Check if the integration API exists in the path specified
	if (file_exists($integration_api_path)) {
		// Include Integration API, only once
		if (!defined('XOOPS_ROOT_PATH')) {
			include_once($integration_api_path);

			// Initialize API explicitly so that XOOPS_ROOT_PATH gets defined
			Formulize::init();

			// Set user ID for Formulize Session
			global $formulizeHostSystemUserId;
			$formulizeHostSystemUserId = $user->uid;
		}

		return true;
	}
	// If it does not exist in the path specified, let administrators know to set the Formulize path
	else if ($user->roles && array_key_exists(3, $user->roles)) {
		drupal_set_message(t('The Formulize path is not set. Please <a href="#overlay=admin/settings/formulize/path">set the Formulize path</a>.'), 'error');

		return false;
	}
}

include_formulize();

